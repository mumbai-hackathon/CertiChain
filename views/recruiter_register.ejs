    <style>
    .input-group .label:after {
        content:"*";
        color:red;
    }
    </style>
</head>

<body>
    <div>
        <% include navbar.ejs ;%>
    </div>    

    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Recruiter Registration Form</h2>
                    <form action="/faculty/recruiter_register" method="post" id="doctorRegister">
                        <div class="row row-space">
                            <div class="col-12">
                                <div class="input-group">
                                    <label class="label">Company name</label>
                                    <input class="input--style-4" type="text" name="company" id="first_name" placeholder="Enter Company name" required>
                                </div>
                            </div>
                        </div>

                        <div class="row row-space">
                            <div class="col-9">
                                <div class="input-group">
                                    <label class="label">Name</label> 
                                    <input class="input--style-4" type="text" name="name" id="first_name" placeholder="Enter name" required>
                                </div>
                            </div>
                        </div>

                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Email</label>
                                    <input class="input--style-4" type="email" name="email" placeholder="Enter your E-mail" required>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Phone Number</label>
                                    <input class="input--style-4" type="tel" name="contactNo" placeholder="Enter phone number" required>
                                </div>
                            </div>
                        </div>

                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label">Password</label>
                                    <input class="input--style-4" type="password" name="password" placeholder="Enter password" required>
                                </div>
                            </div>
                        </div>

                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit" style="padding:1.5vh 6vh; border-radius:50px 50px;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/register/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="/register/vendor/select2/select2.min.js"></script>
    <script src="/register/vendor/datepicker/moment.min.js"></script>
    <script src="/register/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="/register/js/global.js"></script>

